<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <style>
        #rectangle{
            width: 100%;
            height: 110px;
            background-color: #391778;
        }
        body{
            margin: 0px;
            font-family: 'inter';
        }
        h1{
            background-color: #391778;
            color: white;
            text-align: center;
            margin-top: 0%;
            padding-bottom: 20px;
        }
        #image-container{
            background-color: #391778;
            text-align: center;
        }
        #logo{
            background-color: #391778;
            align-items: center;
            margin-bottom: 0%;
        }
        #label-container{
            text-align: center;
        }
    </style>
</head>
<body>
    <div id="rectangle"></div>
    <div id="image-container">
    <img id="logo" src="https://img.icons8.com/wired/100/ffffff/link--v1.png"/>
    </div>
    <h1>URL Shortener</h1>
    <% if(locals.id) { %>
        <p>URL Generated: http://localhost:8001/url/<%= id%></p>
    <% } %>
    <div id="label-container">
        <form method="post" action="/url">
            <label style="text-align: center; font-weight: bold;">Enter your Original URL</label><br><br>
            <input type="text" name="url" placeholder="https://example.com"/>
            <button type="submit">Generate</button>
        </form>
    </div><br><br>
    <h2 style="margin-left: 25%;">Links History: ______________________________________________</h2>
    <div style="margin-left: 25%;">
        <% if(locals.urls){ %>
        <table style="border-spacing: 1em;">
            <thead>
                <th>S.No.</th>
                <th>ShortID</th>
                <th>Redirect</th>
                <th>Clicks</th>
            </thead>
            <tbody>
                <% urls.forEach((url, index) => { %>
                    <tr>
                    <td><%= index+1 %></td>
                    <td><%= url.shortId %></td>
                    <td><%= url.redirectURL %></td>
                    <td><%= url.visitHistory.length %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } %>
    </div>
</body>
</html>